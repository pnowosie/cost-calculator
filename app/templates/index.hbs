
<div class="jumbotron">
  <h2>Kwota na paragonie <span class="label label-success">{{format-number model.cost format="0.00"}}</span> PLN</h2>
</div>

<form class="form-horizontal">
  <div class="form-group">
    <label class="col-xs-3">Wartość przedmiotu sporu</label>
    <div class="col-xs-9">
      {{input type="number" min="0" value=model.litigationValue class="form-control" placeholder="Podaj kwotę" }}
    </div>

    <label class="col-xs-3">Koszt wynajmu sali</label>
    <div class="col-xs-9">
      {{input type="number" min="0" value=model.roomRentFee class="form-control" placeholder="Podaj kwotę" }}
    </div>
    
    <label class="col-xs-3">Koszty operacyjne</label>
    <div class="col-xs-9">
      {{input type="number" min="0" value=model.sessionFee class="form-control" placeholder="Podaj kwotę" }}
    </div>
    
    <label class="col-xs-3">Koszty podziel równo na</label>
    <div class="col-xs-9">
      <select class="selectpicker form-control" data-style="btn-inverse" >
        <option {{action "selectedParticipant" model 2}} value="2">2 osoby</option>
        <option {{action "selectedParticipant" model 3}} value="3">3 osoby</option>
        <option {{action "selectedParticipant" model 4}} value="4">4 osoby</option>
        <option {{action "selectedParticipant" model 5}} value="5">5 osób</option>
      </select>
    </div>
  </div>

</form>